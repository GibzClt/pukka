{
  "name": "pukka",
  "version": "1.1.0",
  "description": "Typescript schema-first zod compatible hyper validation",
  "repository": {
    "type": "git",
    "url": "https://github.com/ajaishankar/pukka.git"
  },
  "license": "MIT",
  "author": "Ajai Shankar",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist/index.js", "dist/index.d.ts"],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsup src/index.ts --dts --format esm",
    "clean": "rimraf dist",
    "format": "biome format . --write",
    "lint": "biome lint . --write",
    "prepack": "npm run test && npm run build",
    "test": "vitest --typecheck run",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@vitest/coverage-v8": "^2.0.5",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "keywords": ["typescript", "schema", "validation", "type", "inference", "zod"]
}
